# =============================================================================
# PatenTrack3 Environment Variables
# Copy to .env.local and fill in values
# =============================================================================

# --- Database (Neon PostgreSQL) ---
DATABASE_URL="postgresql://user:password@host:5432/patentrack?sslmode=require"

# --- Redis (Upstash) ---
REDIS_URL="rediss://default:password@host:6379"

# --- Auth ---
JWT_SECRET="change-me-to-a-64-char-random-string"
JWT_REFRESH_SECRET="change-me-to-a-different-64-char-random-string"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# --- S3 (Private bucket for PDFs, logos) ---
S3_BUCKET="patentrack3-private"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_SIGNED_URL_EXPIRY="900"

# --- OAuth2 Providers ---
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""

# --- External APIs ---
EPO_CLIENT_ID=""
EPO_CLIENT_SECRET=""
RITEKIT_API_KEY=""
CLEARBIT_API_KEY=""

# --- Integrations ---
SLACK_BOT_TOKEN=""
SLACK_SIGNING_SECRET=""

# --- Application ---
NEXT_PUBLIC_APP_URL="http://localhost:3000"
WORKER_PORT="3001"
NODE_ENV="development"
LOG_LEVEL="debug"

# --- Sentry (optional) ---
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
