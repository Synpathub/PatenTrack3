{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@patentrack/db": ["../../packages/db/src"],
      "@patentrack/db/*": ["../../packages/db/src/*"],
